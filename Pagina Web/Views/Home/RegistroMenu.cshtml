@model DataBaseExample.Models.Model_User
@{
    ViewBag.Title = "RegistroMenu";
}

<div class="container">
    <div class="page-header">
        <h1 class="all-tittles">Administación<small> de Menu</small></h1>
    </div>
</div>
<div class="container-fluid">
    <ul class="nav nav-tabs nav-justified" style="font-size: 17px;">
        @for (int i = 0; i < Pagina_Web.Models.TipoUsuario.NombreTipoUsuario.Count; i++)
        {
            if (i == 0)
            {
                <li role="presentation" class="active"><a href="#security" aria-controls="security" role="tab" data-toggle="tab">@Pagina_Web.Models.TipoUsuario.NombreTipoUsuario[i]</a></li>
            }
            else
            {
            <li role="presentation"><a href="#@Pagina_Web.Models.TipoUsuario.NombreTipoUsuario[i]" aria-controls="others" role="tab" data-toggle="tab">@Pagina_Web.Models.TipoUsuario.NombreTipoUsuario[i]</a></li>
            }
        }
    </ul>
</div>
<br>

<div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="security">
        <div class="container-flat-form">

            <div class="title-flat-form title-flat-blue">Registro de Menu para @Pagina_Web.Models.TipoUsuario.NombreTipoUsuario[0]</div>
            <div align="center">
            </div>
            <form autocomplete="off"  action="RegistroMenu" method="post">
                <div class="row">
                    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                        <div class="group-material">
                            <input type="text" name="NombreMenu" class="material-control tooltips-general" placeholder="Nombre" required="" maxlength="70" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,70}" data-toggle="tooltip" data-placement="top" title="Escribe el nombre para el SubMenu">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Nombre</label>
                        </div>
                        <div class="group-material">
                            <input type="text" name="Link" class="material-control tooltips-general" placeholder="Nombre" required="" maxlength="70" data-toggle="tooltip" data-placement="top" title="Escribe el Link para el SubMenu">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Link</label>
                        </div>
                        <p class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="zmdi zmdi-floppy"></i> &nbsp;&nbsp; Guardar</button>
                        </p>
                    </div>
                </div>
            </form>

            <div class="container-fluid">
                <h2 class="text-center all-tittles">Listado de Menu</h2>
                <div class="table-responsive">
                    <div class="div-table" style="margin:0 !important;">
                        <div class="div-table-row div-table-row-list" style="background-color:#DFF0D8; font-weight:bold;">
                            <div class="div-table-cell" style="width: 6%;">#</div>
                            <div class="div-table-cell" style="width: 22%;">Nombre</div>
                            <div class="div-table-cell" style="width: 22%;">link</div>
                            <div class="div-table-cell" style="width: 8%;">Eliminar</div>
                            <div class="div-table-cell" style="width: 8%;">Actualizar</div>
                        </div>
                    </div>
                </div>
                @for (int i = 0; i < Pagina_Web.Models.TipoUsuario.NombreMenu.Count; i++)
                {
                    if (Pagina_Web.Models.TipoUsuario.TipoUsaurio[i] ==1)
                    {
                    <div class="table-responsive">
                        <div class="div-table" style="margin:0 !important;">
                            <div class="div-table-row div-table-row-list">
                                <div class="div-table-cell" style="width: 6%;">#</div>
                                <div class="div-table-cell" style="width: 22%;">@Pagina_Web.Models.TipoUsuario.NombreMenu[i]</div>
                                <div class="div-table-cell" style="width: 22%;">@Pagina_Web.Models.TipoUsuario.Link[i]</div>
                                <div class="div-table-cell" style="width: 8%;">
                                    <button class="btn btn-danger"><i class="zmdi zmdi-delete"></i></button>
                                </div>
                                <div class="div-table-cell" style="width: 8%;">
                                    <button class="btn btn-info"><i class="zmdi zmdi-file-text"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                    else
                    {

                    }
                }
            </div>
        </div>
    </div>


  @for (int a = 0; a < Pagina_Web.Models.TipoUsuario.NombreTipoUsuario.Count; a++)
  {
    <div role="tabpanel" class="tab-pane fade" id="@Pagina_Web.Models.TipoUsuario.NombreTipoUsuario[a]">       
